{
  "name": "@chiimagnus/lihuacat",
  "version": "0.2.0",
  "type": "module",
  "packageManager": "pnpm@10.4.1",
  "description": "Local-first: images -> short story video (Remotion) CLI",
  "engines": {
    "node": ">=20"
  },
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "bin": {
    "lihuacat": "./bin/lihuacat.js"
  },
  "files": [
    "bin",
    "dist",
    "README.md"
  ],
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  },
  "scripts": {
    "preinstall": "node ./scripts/enforce-pnpm.mjs",
    "dev": "node --experimental-strip-types src/index.ts",
    "start": "node --experimental-strip-types src/index.ts",
    "test": "node tests/run-tests.mjs",
    "check": "node ./node_modules/typescript/bin/tsc -p tsconfig.json",
    "build": "node ./node_modules/typescript/bin/tsc -p tsconfig.build.json",
    "prepack": "node ./node_modules/typescript/bin/tsc -p tsconfig.build.json",
    "prepare": "node ./node_modules/typescript/bin/tsc -p tsconfig.build.json"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.0",
    "@openai/codex-sdk": "^0.98.0",
    "@remotion/bundler": "^4.0.419",
    "@remotion/renderer": "^4.0.343",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remotion": "^4.0.343",
    "sharp": "^0.33.5",
    "zod": "3.22.3"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "typescript": "^5.9.2"
  }
}
